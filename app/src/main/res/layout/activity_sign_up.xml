<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/SignupImage"
            android:layout_width="wrap_content"
            android:layout_height="150sp"
            android:src="@drawable/signup"/>

        <EditText
            android:layout_below="@+id/SignupImage"
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/full_name"
             />
        <EditText
            android:id="@+id/age"
            android:layout_below="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/age"
            android:layout_marginTop="15sp"
            />


        <EditText
            android:id="@+id/Email"
            android:layout_below="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_adresse"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:layout_marginTop="15sp"/>


        <EditText
            android:id="@+id/Password"
            android:layout_below="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pwd"
            android:drawableStart="@drawable/ic_baseline_no_encryption_24"
            android:inputType="textPassword"
            android:layout_marginTop="15sp"/>

        <Button
            android:id="@+id/registerUser"
            android:layout_below="@id/Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/purple_700"
            android:textColor="@color/white"
            android:text="@string/sign_up1"
            android:layout_marginTop="15sp"

             />

        <TextView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/registerUser"
            android:text="@string/register_text"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_margin="20dp"
            />



    </RelativeLayout>
</ScrollView>